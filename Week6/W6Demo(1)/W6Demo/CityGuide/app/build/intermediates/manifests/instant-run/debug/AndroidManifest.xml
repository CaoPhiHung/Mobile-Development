            android:name="net.androidbootcamp.cityguide.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.androidbootcamp.cityguide.Pier"
            android:label="@string/title_activity_pier" />
        <activity android:name="net.androidbootcamp.cityguide.Willis" />
        <activity android:name="net.androidbootcamp.cityguide.Water" />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="net.androidbootcamp.cityguide.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>